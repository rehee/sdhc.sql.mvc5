@model RolesIndexView
@inject ISDHCUserManager<SDHCUser> userManager
@inject IOptions<SystemConfig> config
@{
  ViewBag.Title = "User and Roles";
  var size = 10;
  var c = userManager.BaseUser.GetObjectCustomAttribute<AllowChildrenAttribute>();
  if (c != null && c.TableSize != EnumTablePageSize.L0)
  {
    size = (int)c.TableSize;
  }
  else
  {
    size = config.Value.DefaultTablePageSize;
  }
}

<div class="row clearfix">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
      <div class="card-header">
        <div class="button-box">
          <a href="@Url.Action("RoleList","Roles",new { @area="Admin" })" class="btn btn-success">
            Management Roles
          </a>
          <a href="@Url.Action("CreateUser","Roles",new { @area="Admin" })" type="button" class="btn btn-info">
            Create User
          </a>
        </div>
        <br />
        <h2>
          @foreach (var item in Model.RoleAndUsers)
          {
            <a href="@Url.Action("Index","Roles",new { @area="Admin",@id=item.RoleName } )">@item.RoleDisplayName (@item.Users)</a>
          }

        </h2>
      </div>

      <div class="body">
        <table class="table table-bordered table-striped table-hover basic-example dataTable">
          <thead>
            <tr>
              <th>User ID</th>
              <th>User Name</th>
              <th>Create Date</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>User ID</th>
              <th>User Name</th>
              <th>Create Date</th>
            </tr>
          </tfoot>
          <tbody>

            @foreach (var item in Model.Users)
            {
              <tr>
                <td> <a href="@Url.Action("EditUser","Roles",new { @area="Admin",@id=item.Id })">@item.Id</a> </td>
                <td> <a href="@Url.Action("EditUser","Roles",new { @area="Admin",@id=item.Id })">@item.UserName</a> </td>
                <td> <a href="@Url.Action("EditUser","Roles",new { @area="Admin",@id=item.Id })">@item.CreateDate</a> </td>
              </tr>
            }
          </tbody>


        </table>

      </div>


    </div>
  </div>
</div>





@section script{
  <script src="/admin-lib/plugins/footable/js/footable.all.min.js"></script>
  <script src="/admin-lib/plugins/footable/js/footable.min.js"></script>
  <script>
    $(function () {
      $('.basic-example').DataTable(
        {
          "pageLength": @size
        });
    });
  </script>
}



